<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="getSingleNote"
       transports="https,http"
       statistics="disable"
       trace="disable"
       startOnLoad="true">
    <target>
        <inSequence>
            <property name="refreshToken" expression="json-eval($.refreshToken)"/>
            <property name="redirectUri" expression="json-eval($.redirectUri)"/>
            <property name="clientId" expression="json-eval($.clientId)"/>
            <property name="clientSecret" expression="json-eval($.clientSecret)"/>
            <property name="grantType" expression="json-eval($.grantType)"/>
            <property name="noteId" expression="json-eval($.noteId)"/>
            <property name="apiUrl" expression="json-eval($.apiUrl)"/>
            <nimble.init/>
            <nimble.getAccessTokenFromRefreshToken>
                <refreshToken>{$ctx:refreshToken}</refreshToken>
                <redirectUri>{$ctx:redirectUri}</redirectUri>
                <clientId>{$ctx:clientId}</clientId>
                <clientSecret>{$ctx:clientSecret}</clientSecret>
                <grantType>{$ctx:grantType}</grantType>
            </nimble.getAccessTokenFromRefreshToken>
            <nimble.getSingleNote>
                <apiUrl>{$ctx:apiUrl}</apiUrl>
                <noteId>{$ctx:noteId}</noteId>
            </nimble.getSingleNote>
            <respond/>
        </inSequence>
        <outSequence>
            <log/>
            <send/>
        </outSequence>
    </target>
    <description/>
</proxy>
